@model ProdutoWeb.Models.Usuario

@{
    Layout = Layout = "~/Views/LayoutAdmin.cshtml";

}

<!-- Page Content -->
<div class="container">
    <!-- Call to Action Well -->
    <div class="row">
        <div class="col-lg-12">
            <div class="well">

                <h2>Usuario</h2>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @using (Html.BeginForm("Inserir", "Usuario", FormMethod.Post))
                {

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="mesnagem">Sobrenome:</label>
                            @Html.EditorFor(model => model.Sobrenome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Sobrenome, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="mesnagem">E-mail:</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="mesnagem">Senha:</label>
                            @Html.PasswordFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>

                        @Html.HiddenFor(model => model.Situacao, new { Value = "1" })

                        <hr />


                        @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn btn-default btn-lg" })
                        <input type="submit" value="Inserir" class="btn btn-primary btn-lg" />

                }


            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
