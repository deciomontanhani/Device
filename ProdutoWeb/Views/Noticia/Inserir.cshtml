@model ProdutoWeb.Models.Noticia

@{
    Layout = Layout = "~/Views/LayoutAdmin.cshtml";
    ProdutoWeb.Models.Usuario usuario = (ProdutoWeb.Models.Usuario)HttpContext.Current.Session["UsuarioLogado"];

}

    <!-- Page Content -->
    <div class="container">
        <!-- Call to Action Well -->
        <div class="row">
            <div class="col-lg-12">
                <div class="well">

                    <h2>Noticia</h2>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @using (Html.BeginForm("Inserir", "Noticia", FormMethod.Post))
                    {


                        <div class="form-group">
                            @Html.HiddenFor(model => model.Id_Usuario, new { Value = usuario.ID_USUARIO})
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="mesnagem">Noticia:</label>
                            @Html.TextAreaFor(model => model.noticia, new { @class = "form-control", @cols = 100, @rows = 2 })
                            @Html.ValidationMessageFor(model => model.noticia, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="mesnagem">Data:</label>
                            @Html.EditorFor(model => model.data_hora, new { htmlAttributes = new { @class = "form-control", Value = DateTime.Now.Date } })
                            @Html.ValidationMessageFor(model => model.data_hora, "", new { @class = "text-danger" })
                        </div>

                        <hr />


                        @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn btn-default btn-lg" })
                        <input type="submit" value="Inserir" class="btn btn-primary btn-lg" />

                    }


                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
